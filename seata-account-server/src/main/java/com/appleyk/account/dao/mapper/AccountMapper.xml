<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.appleyk.account.dao.mapper.AccountMapper">

    <resultMap type="com.appleyk.account.dao.entity.AccountEntity" id="accountEntityMap">
        <id property="id" column="id"/>
        <result property = "uid" column = "uid"/>
        <result property = "amount" column = "amount"/>
    </resultMap>

    <sql id="TABLE_COLUMNS">
        id,uid,amount
	</sql>

    <update id="decreaseAmount">
        update t_account set amount = amount - #{account.amount}  where uid = #{account.uid}
    </update>

</mapper>