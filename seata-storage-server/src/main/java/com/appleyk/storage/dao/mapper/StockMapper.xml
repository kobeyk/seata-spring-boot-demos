<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.appleyk.storage.dao.mapper.StockMapper">

    <resultMap type="com.appleyk.storage.dao.entity.StockEntity" id="stockEntityMap">
        <id property="id" column="id"/>
        <result property = "name" column = "name"/>
        <result property = "commodityCode" column = "commodity_code"/>
        <result property = "count" column = "count"/>
    </resultMap>

    <sql id="TABLE_COLUMNS">
        id,name,commodity_code,count
	</sql>
    
    <update id="reduceStock" parameterType="com.appleyk.storage.dao.entity.StockEntity">
        update t_storage set count = count - #{entity.count}
         where commodity_code = #{entity.commodityCode}
    </update>

</mapper>